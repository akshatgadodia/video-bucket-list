{
  "version": 2,
  "builds": [
    {
      "src": "./server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["data/db.json"]
      }
    },
    {
      "src": "./build",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "dest": "server.js"
    }
  ]
}
